				"-emitter", "gcc",
				"-fix", "true",
				"-unicode", "true",
				"-wrt", "true",
				"-addressaware", "true",
				"-multithreading", "false",
				"-usefilesuffix", "true",
				"-pedantic", "true",
				"-create-environment-file", "true",
				"-winver", "1280",
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\Program Files\\mingw64\\bin\\gdb.exe",
