        {
            "name": "debug CreateMakefile Windows",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CreateMakefile.exe",
            "args": [
				/* "-makefile", "Makefile", */
				"-src", "src",
				"-fbc-path", "C:\\Program Files (x86)\\FreeBASIC-1.10.1-winlibs-gcc-9.3.0",
				/* "-i", "include path", */
				"-fbc", "fbc64.exe",
				"-out", "windows",
				/* Main module filename */
				"-module", "WinMain",
				"-exetype", "exe",
				/* console, windows, native*/
